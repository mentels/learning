.PHONY: compile upgrade clean deep-clean dialyzer shell rel

compile: rebar3
	./rebar3 compile

upgrade: rebar3
	./rebar3 upgrade

clean: rebar3
	./rebar3 clean

deep-clean:
	./rebar3 clean -a

dialyzer: rebar3
	./rebar3 dialyzer

shell: compile
	erl -pa _build/default/lib/*/ebin \
	-eval "application:ensure_all_started(pt1)"

rebar3:
	wget -c https://s3.amazonaws.com/rebar3/rebar3
	chmod +x rebar3


rel:
	./rebar3 release
